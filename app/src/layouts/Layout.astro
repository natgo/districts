---
interface Props {
  title: string;
}

const { title } = Astro.props;

const location = Astro.url.pathname;
const active = (path: string) =>
  path == location ? "border-sky-600" : "border-transparent hover:border-sky-600";
// import IsRouting from "@/components/solid/IsRouting";
import "@/styles/globals.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-screen w-screen">
    <nav class="absolute z-[1000] h-[50px] w-full bg-[#0a1e3c] bg-opacity-80">
      <ul class="container flex items-center p-3 text-gray-200">
        <li class={`border-b-2 ${active("/")} mx-1.5 sm:mx-6`}>
          <a href="/">Home</a>
        </li>
        <li class={`border-b-2 ${active("/explore")} mx-1.5 sm:mx-6`}>
          <a href="/explore">Explore</a>
        </li>
      </ul>
    </nav>
    <slot />
  </body>
</html>
